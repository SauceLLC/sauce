{
    "manifest_version": 2,
    "default_locale": "en",

    "name": "Sauce for Strava™",
    "short_name": "Sauce",
    "description": "__MSG_app_desc__",
    "author": "Sauce, LLC",
    "version": "7.0.5",

    "permissions": [
        "storage",
        "contextMenus"
    ],

    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "48": "images/icon48.png",
        "64": "images/icon64.png",
        "128": "images/icon128.png",
        "256": "images/icon256.png"
    },

    "background": {
        "scripts": [
            "src/ext/webext.js",
            "src/ext/ga.js",
            "src/ext/storage.js",
            "src/ext/rpc_hooks.js",
            "src/bg/menu.js",
            "src/bg/rpc.js",
            "src/bg/migrate.js",
            "src/common/base.js",
            "src/bg/base_init.js",
            "src/site/lib.js",
            "src/site/trailforks.js"
        ]
    },

    "page_action": {
        "default_icon": {
            "19": "images/icon19.png",
            "38": "images/icon38.png",
            "48": "images/icon48.png",
            "64": "images/icon64.png",
            "128": "images/icon128.png",
            "256": "images/icon256.png"
        },
        "default_title": "Sauce for Strava™",
        "default_popup": "pages/options.html?popup"
    },

    "options_ui": {
        "page": "pages/options.html",
        "open_in_tab": true
    },

    "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",

    "content_scripts": [{
        "run_at": "document_start",
        "matches": ["https://www.strava.com/*"],
        "css": [
            "css/site/common.css"
        ],
        "js": [
            "src/ext/webext.js",
            "src/ext/storage.js",
            "src/ext/rpc_hooks.js",
            "src/ext/rpc_proxy.js",
            "src/ext/patron.js",
            "src/common/base.js",
            "src/site/preloader.js",
            "src/ext/boot.js"
        ]
    }],

    "web_accessible_resources": [
        "build.json",
        "src/common/*",
        "src/site/*",
        "css/site/*",
        "templates/*",
        "images/*"
    ]
}

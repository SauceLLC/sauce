#!/bin/sh -e

if [ ! -f "./manifest_${1}.json" ] ; then
    echo Usage: $0 MANIFEST_KIND 1>&2
    exit 1
fi

KIND=$1

TMPDIR=$(mktemp -d)
rsync -a \
    --exclude '.git*' \
    --exclude 'manifest*.json' \
    --exclude 'README.md' \
    --exclude 'Makefile' \
    --exclude '.eslint*' \
    --exclude '*.swp*' \
    --exclude 'package.json' \
    --exclude '.npmrc' \
    --exclude 'node_modules' \
    --exclude 'tools' \
    --exclude 'assets' \
    --exclude 'images/*dev.png' \
    --exclude 'scss' \
    --exclude 'css' \
    --exclude 'builds' \
    --exclude 'test' \
    --exclude 'safari-app' \
    --exclude 'safari' \
    ./* $TMPDIR

node_modules/.bin/sass scss:$TMPDIR/css --no-source-map
cp -a scss/site/fonts $TMPDIR/css/site/

$(dirname $0)/mergejson "./manifest_base.json" "./manifest_${KIND}.json" > $TMPDIR/manifest.json

if [[ $KIND = gecko* ]] ; then
    EXT=xpi
else
    EXT=zip
fi

GIT_COMMIT=$(git rev-parse --short HEAD 2>/dev/null || echo 0)
VERSION=$($(dirname $0)/version $TMPDIR/manifest.json)
BUILDS=$(pwd)/builds
mkdir -p $BUILDS
cd $TMPDIR
OUTFILE="${BUILDS}/sauce-${KIND}-${VERSION}-${GIT_COMMIT}.${EXT}"
zip -9 -r -FS "$OUTFILE" *
cd -
rm -rf $TMPDIR
echo Wrote $OUTFILE
